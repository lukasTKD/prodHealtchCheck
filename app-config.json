      { "id": "KolejkiMQ", "label": "Kolejki MQ", "dataFile": "infra_KolejkiMQ.json" },
      { "id": "PrzelaczeniaRol", "label": "Przelaczenia rol", "dataFile": "infra_PrzelaczeniaRol.json" }
    ],
    "logs": [
      { "id": "LogiEventLog", "label": "Event Log", "configFile": "EventLogsConfig.json" }
    ]
